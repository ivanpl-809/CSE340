<%- include('../partials/header') %>

<h1>Delete <%= title %></h1>

<% if (messages && messages.length > 0) { %>
  <div class="flash">
    <% messages.forEach(function(message) { %>
      <p><%= message %></p>
    <% }) %>
  </div>
<% } %>

<p class="warning">⚠️ Confirm Deletion - This action is permanent and cannot be undone.</p>

<form action="/inv/delete" method="post" class="form">

  <div class="form-group">
    <label for="inv_make">Make</label>
    <input type="text" name="inv_make" id="inv_make" value="<%= inv_make %>" readonly>
  </div>

  <div class="form-group">
    <label for="inv_model">Model</label>
    <input type="text" name="inv_model" id="inv_model" value="<%= inv_model %>" readonly>
  </div>

  <div class="form-group">
    <label for="inv_year">Year</label>
    <input type="number" name="inv_year" id="inv_year" value="<%= inv_year %>" readonly>
  </div>

  <div class="form-group">
    <label for="inv_price">Price</label>
    <input type="number" name="inv_price" id="inv_price" value="<%= inv_price %>" step="0.01" readonly>
  </div>

  <div class="form-group">
    <button type="submit" class="danger-button">Delete Vehicle</button>
  </div>

  <input type="hidden" name="inv_id" value="<%= inv_id %>">

</form>

<%- include('../partials/footer') %>
