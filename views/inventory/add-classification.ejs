<%- include('../partials/header') %>

<h1>Add New Classification</h1>

<% if (messages && messages.length > 0) { %>
  <div class="flash">
    <% messages.forEach(function(message) { %>
      <p><%= message %></p>
    <% }) %>
  </div>
<% } %>

<form action="/inv/add-classification" method="post">
  <label for="classification_name">Classification Name</label>
  <input type="text" name="classification_name" id="classification_name" pattern="^[A-Za-z0-9]+$" required>
  <p>No spaces or special characters allowed.</p>
  <button type="submit">Add Classification</button>
</form>

<%- include('../partials/footer') %>
