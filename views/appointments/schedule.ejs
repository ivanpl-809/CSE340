<%- include('../partials/header') %>

<main>
  <h1>Schedule Test Drive</h1>

  <% if (messages && messages.length > 0) { %>
  <div class="notice">
    <% messages.forEach(function(message) { %>
      <p><%= message %></p>
    <% }) %>
  </div>
<% } %>

  <form action="/appointments/schedule" method="post" class="form">
    <input type="hidden" name="inv_id" value="<%= inv_id %>">

    <div class="form-group">
      <label for="appointment_date">Date and Time</label>
      <input
        type="datetime-local"
        id="appointment_date"
        name="appointment_date"
        required
      >
    </div>

    <div class="form-group">
      <label for="message">Message (optional)</label>
      <textarea id="message" name="message" rows="4" placeholder="Any specific notes or questions?"></textarea>
    </div>

    <div class="form-group">
      <button type="submit">Schedule Appointment</button>
    </div>
  </form>
</main>

<%- include('../partials/footer') %>
